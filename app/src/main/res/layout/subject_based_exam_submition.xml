<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/botton_sheet_baground"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Geography (Bangladesh and the World), Environment and Disaster Management"
            android:textSize="16sp"
            android:id="@+id/tvSubjectName"
            android:gravity="center"
            android:padding="10dp"

            android:textColor="@color/darkTangerine"

            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:textColor="@color/LiteBlack"
                    android:text="Time (MAX minutes 18) "/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:background="@drawable/round_back_white50_10"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="70dp"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:id="@+id/edTime"
                    android:maxLength="2"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:orientation="vertical">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/LiteBlack"
                    android:text="Time (Max question 50) "/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:background="@drawable/round_back_white50_10"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="50dp"
                    android:padding="10dp"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/edNumOfQuestion"
                    android:maxLength="2"

                    />
            </LinearLayout>






        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Start Exam"
            android:padding="10dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:gravity="center"
            android:id="@+id/btnSubmit"
            android:background="@drawable/round_sceondery_button_100"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not Now"
            android:id="@+id/btnCancal"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:textColor="@color/tangerine"/>

    </LinearLayout>

</ScrollView>

