<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#22FDE0CB"
    android:gravity="center"
    tools:context=".Activity.TestQuestionBank">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:id="@+id/backButton"
                android:src="@drawable/baseline_arrow_back_24"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkTangerine"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="23sp"
                android:id="@+id/titleTv"
                android:textStyle="bold"
                android:text="@string/questionBank"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/shimer"
        android:layout_below="@id/card"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <include layout="@layout/shimer_nots"/>
            <include layout="@layout/shimer_nots"/>
            <include layout="@layout/shimer_nots"/>
            <include layout="@layout/shimer_nots"/>
            <include layout="@layout/shimer_nots"/>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recview33"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_below="@+id/card"

        >

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>