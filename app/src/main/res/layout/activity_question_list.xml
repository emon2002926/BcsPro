<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.QuestionListActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="30dp"
        android:id="@+id/card"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:id="@+id/backButton"
                android:src="@drawable/baseline_arrow_back_24"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkTangerine"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="23sp"
                android:gravity="start"
                android:id="@+id/topTv"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:text="44th BCS Question "
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:id="@+id/tryAgainLayout"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_below="@+id/card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Something went wrong"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/LiteBlack"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Please check your internet connection and try again"
            android:textSize="15sp"
            android:textColor="@color/LiteBlack"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingEnd="45dp"
            android:paddingStart="45dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textSize="20sp"
            android:id="@+id/retryBtn"
            android:text="Retry"
            android:background="@drawable/round_sceondery_button_100"
            android:textColor="@color/white"/>

    </LinearLayout>


        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_below="@id/card"
            android:id="@+id/shimer"
            android:visibility="visible"
            android:layout_height="match_parent">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <include
                            layout="@layout/shimer_mcq_baground"/>
                        <include
                            layout="@layout/shimer_mcq_baground"/>
                        <include
                            layout="@layout/shimer_mcq_baground"/>
                        <include
                            layout="@layout/shimer_mcq_baground"/>
                    </LinearLayout>

                </ScrollView>



        </com.facebook.shimmer.ShimmerFrameLayout>

    <LinearLayout
        android:layout_below="@id/card"
        android:layout_width="match_parent"
        android:background="#fffbfa"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recview"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnShowAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        app:backgroundTint="#FFFFFF"
        android:layout_marginBottom="100dp"
        app:fabSize="mini"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:src="@drawable/hidden"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>