<?xml version="1.0" encoding="utf-8"?>
<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/overall_exams"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:paddingStart="10dp"
                android:textSize="20sp"
                android:layout_weight="2.4"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Date: 11-02-2023"
                android:textColor="@color/blue"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:gravity="end"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:layout_weight="2.6"
                android:id="@+id/tvDate"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="#"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Total"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text="Correct"
                android:textSize="18sp"
                android:textColor="@color/liteGreen"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:text="wrong"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/liteRed"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Marks"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/liteBlue"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Result"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/totalTv"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text=""
                android:id="@+id/correctTv"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:text=""
                android:textSize="18sp"
                android:id="@+id/wrongTv"
                android:gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/marksTv"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/black"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/totalTv1"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text=""
                android:id="@+id/correctTv1"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:text=""
                android:textSize="18sp"
                android:id="@+id/wrongTv1"
                android:gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/marksTv1"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/black"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/totalTv2"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text=""
                android:id="@+id/correctTv2"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:text=""
                android:textSize="18sp"
                android:id="@+id/wrongTv2"
                android:gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/marksTv2"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/black"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/totalTv3"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text=""
                android:id="@+id/correctTv3"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:text=""
                android:textSize="18sp"
                android:id="@+id/wrongTv3"
                android:gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/marksTv3"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/black"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/totalTv4"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text=""
                android:id="@+id/correctTv4"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:text=""
                android:textSize="18sp"
                android:id="@+id/wrongTv4"
                android:gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/marksTv4"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/black"
                />

        </LinearLayout>






    </LinearLayout>


</LinearLayout>