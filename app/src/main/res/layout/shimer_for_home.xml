<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Your views go here -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/l40">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@color/shmirBagroung"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@color/shmirBagroung"
                        android:layout_marginTop="10dp"

                        >

                    </TextView>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/r1"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/l40">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/tvCource"
                        android:visibility="visible"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/shmirBagroung"
                            android:textColor="@color/black"
                            android:layout_marginStart="20dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_weight="1"


                            />
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:background="@color/shmirBagroung"
                            android:layout_marginStart="20dp"
                            android:textSize="20sp"
                            android:layout_marginEnd="20dp"


                            />
                    </LinearLayout>


                    <LinearLayout android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:id="@+id/l1"
                        android:visibility="visible"
                        android:layout_below="@id/tvCource"
                        android:layout_marginBottom="20dp"
                        android:layout_width="fill_parent">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_weight="1"
                            android:layout_height="100dip"
                            android:layout_marginEnd="20dp"
                            android:layout_width="0dp"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="10dp"
                            android:background="@color/shmirBagroung"

                            />

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_height="100dip"
                            android:layout_width="0dp"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="10dp"
                            android:background="@color/shmirBagroung"
                            />
                        <com.makeramen.roundedimageview.RoundedImageView
                            app:riv_corner_radius="10dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_height="100dip"
                            android:layout_marginStart="20dp"
                            android:layout_width="0dp"
                            android:background="@color/shmirBagroung"
                            android:scaleType="fitXY"
                            />

                    </LinearLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/r1"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/r2"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@color/shmirBagroung"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/l2"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/tv1"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginEnd="10dp"
                            android:elevation="4dp"
                            app:cardCornerRadius="10dp"
                            android:layout_weight="1"
                            >

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:background="@color/shmirBagroung"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="17sp"

                                />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginEnd="10dp"
                            android:elevation="4dp"
                            app:cardCornerRadius="10dp"
                            android:layout_weight="1">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:background="@color/shmirBagroung"
                                android:textColor="@color/black"
                                android:textSize="17sp"

                                />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l3"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/l2"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginEnd="10dp"
                            android:elevation="4dp"
                            app:cardCornerRadius="10dp"
                            android:layout_weight="1"
                            >

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:background="@color/shmirBagroung"
                                android:textColor="@color/black"
                                android:textSize="17sp"

                                />

                        </androidx.cardview.widget.CardView>




                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginEnd="10dp"
                            android:elevation="4dp"
                            app:cardCornerRadius="10dp"
                            android:layout_weight="1"
                            >


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:background="@color/shmirBagroung"
                                android:textColor="@color/black"
                                android:textSize="17sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_below="@id/r2"
                    android:id="@+id/l4"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:elevation="4dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="horizontal"
                        android:background="@color/shmirBagroung"

                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_weight="1"
                            android:textColor="#0095ff"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="end"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/l4"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/l7">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_back_white50_10"
                        android:orientation="horizontal"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp"
                        >


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:background="@color/shmirBagroung"
                            >

                            <LinearLayout
                                android:id="@+id/l5"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/exam"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_marginEnd="20dp"
                                    android:layout_weight="1"
                                    android:gravity="fill"
                                    android:background="@color/shmirBagroung"

                                    android:textColor="#0095ff"
                                    android:textSize="22sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/l6"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/l5"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView

                                    android:id="@+id/q1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Easy and fun way to Learn "
                                    android:textColor="@color/shmirBagroung"
                                    android:textSize="17sp"
                                    android:layout_marginStart="5dp"
                                    android:padding="4dp"

                                    />


                            </LinearLayout>


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="5"
                            android:padding="2dp"

                            >

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@color/shmirBagroung"

                                />
                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>







            </RelativeLayout>


        </ScrollView>

    </RelativeLayout>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>