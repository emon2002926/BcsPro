<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/botton_sheet_baground"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""
        android:padding="15dp"
        android:textSize="20sp"
        android:id="@+id/tvDis"
        android:gravity="center"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Are you Sure\n You want to submit"
        android:padding="15dp"
        android:textSize="20sp"
        android:id="@+id/tvDis2"
        android:gravity="center"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Submit"
        android:padding="10dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:gravity="center"
        android:id="@+id/btnSubmit"
        android:background="@drawable/round_sceondery_button_100"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not Now"
        android:id="@+id/btnCancal"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="#ec6666"/>

</LinearLayout>