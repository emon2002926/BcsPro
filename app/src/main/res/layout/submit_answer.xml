<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/bottomSheetSubmet"
    android:background="@drawable/botton_sheet_baground"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="You have answered  30  Question out of  50"
        android:padding="15dp"
        android:textSize="18sp"
        android:id="@+id/tvDis"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="@color/LiteBlack"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Are you Sure  You want to submit"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:id="@+id/tvDis2"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Submit"
        android:padding="10dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:gravity="center"
        android:id="@+id/btnSubmit"
        android:background="@drawable/round_sceondery_button_100"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not Now"
        android:id="@+id/btnCancal"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:textSize="18sp"
        android:padding="10dp"
        android:textColor="@color/liteTangerine"/>

</LinearLayout>