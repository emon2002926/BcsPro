<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="7dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/bcsQuestionLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp"
            android:visibility="visible"
            android:id="@+id/layout1"
            android:background="@drawable/lite_baground_05"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="25dp"
                    android:textColor="@color/LiteBlack2"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:id="@+id/questionBatch"
                    android:text="44th Batch BCS Question"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:paddingEnd="5dp"
                    android:src="@drawable/ic_baseline_arrow_forward_24"
                    app:tint="@color/LiteBlack"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:paddingTop="3dp"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="16dp"
                    android:textColor="@color/green"
                    android:id="@+id/numOFQuestion"
                    android:text="@string/amountOfQuestion"/>


            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:id="@+id/layout2"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="visible"
            android:background="@drawable/lite_round_baground"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1)"
                android:id="@+id/tvPosition"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/LiteBlack"
                android:textSize="17sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:id="@+id/tvSubject"
                android:layout_marginStart="8dp"
                android:text="International Affairs"
                android:layout_weight="1"
                android:textColor="@color/LiteBlack2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_arrow_forward_24"
                app:tint="@color/LiteBlack"

                />
        </LinearLayout>


</LinearLayout>