<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/white"
        android:weightSum="1"
        android:id="@+id/fullProfileLayout"
        android:orientation="horizontal">


        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/profileImageID"
            android:src="@drawable/test_profile_image"
            android:scaleType="centerCrop"
            android:padding="3dp"
            app:riv_corner_radius="100dp"
            android:layout_marginEnd="10dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.90"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MD Emon"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/userNameTvD"
                android:textColor="@color/darkTangerine"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dlkfghjsdlg"
                android:textSize="14sp"
                android:id="@+id/userIdTv"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>